<odoo>
  <data>
<!-- Tree View-->
    <record model="ir.ui.view" id="cwm.list_repair">
      <field name="name">Repair list</field>
      <field name="model">cwm.repair</field>
      <field name="arch" type="xml">
        <tree>
          <field name="rep_num"/>
          <field name="name"/>
          <field name="budget"/>
        </tree>
      </field>
    </record>

<!-- Form View-->
    <record model="ir.ui.view" id="cwm.form_repair">
      <field name="name">Repair form</field>
      <field name="model">cwm.repair</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <h1>
              <field name="rep_num"/>
            </h1>
            <group>
              <group>
                <field name="name"/>
                <field name="sequence"/>
                <field name="car_id"/>
              </group>
              <group>
                <field name="budget"/>
                <field name="currency_id"/>
                <!--<field name="worker_ids" widget="many2many_tags"/>-->
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

<!-- Action -->
    <record model="ir.actions.act_window" id="cwm.action_repair">
      <field name="name">Repair window</field>
      <field name="res_model">cwm.repair</field>
      <field name="view_mode">tree,form</field>
    </record>



<!-- MenÃº -->
    <menuitem name="Repairs" id="cwm.menu_repairs" parent="cwm.menu_root"
          action="cwm.action_repair" sequence="20"/>






  </data>
</odoo>