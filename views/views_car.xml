<odoo>
  <data>

    <!-- Kanban View -->
    <record id="view_cwm_cars_kanban" model="ir.ui.view">
      <field name="name">cwm.cars.kanban</field>
      <field name="model">cwm.car</field>
      <field name="arch" type="xml">
        <kanban default_group_by="state">
          <field name="state"/>
          <field name="id"/>
          <field name="model_id"/>
          <field name="plate_number"/>
          <field name="brand_id"/>
          <field name="picture"/>
          <templates>
            <t t-name="kanban-box">
              <div class="o_kanban_record_has_image_fill oe_kanban_global_click o_cwm_cars_kanban">
                <t t-if="record.picture.raw_value">
                  <img class="o_kanban_image_fill_left d-none d-md-block"
                       t-attf-style="background-image:url('#{kanban_image('cwm.car', 'picture', record.id.raw_value)}')" alt="image"/>
                </t>
                <t t-else="">
                  <img class="o_kanban_image" t-att-src='_s + "/odoo/base/static/img/avatar.png"' alt="image"/>
                </t>
                <div class="o_kanban_details">
                  <strong class="o_kanban_record_title">
                    <field name="plate_number"/>
                  </strong>
                  <div class="o_kanban_tags_section">
                    <ul>
                      <li>
                        <field name="brand_id"/>
                      </li>
                      <li>
                        <field name="model_id"/>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

    <!-- Tree View -->
    <record model="ir.ui.view" id="cwm.list_car">
      <field name="name">Car list</field>
      <field name="model">cwm.car</field>
      <field name="arch" type="xml">
        <tree>
          <field name="plate_number"/>
          <field name="brand_id"/>
          <field name="model_id"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record model="ir.ui.view" id="cwm.form_car">
      <field name="name">Car form</field>
      <field name="model">cwm.car</field>
      <field name="arch" type="xml">
        <form string="Cars">
          <sheet>
            <field name="picture" widget="image" class="oe_avatar"/>
            <div>
              <h1>
                <field name="plate_number" placeholder="Plate Number"/>
              </h1>
            </div>
            <group>
              <field name="vin_number"/>
              <field name="brand_id"/>
              <field name="model_id" domain="[('brand_id','=',brand_id)]"/>
              <field name="owner"/>
              <field name="state"/>
              <field name="repair_ids"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- Action -->
    <record model="ir.actions.act_window" id="cwm.action_car">
      <field name="name">Car window</field>
      <field name="res_model">cwm.car</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- MenÃº -->
    <menuitem name="Cars" id="cwm.menu_car" parent="cwm.menu_root"
              action="cwm.action_car" sequence="10"/>

  </data>
</odoo>